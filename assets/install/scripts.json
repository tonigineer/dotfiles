[
  {
    "name": "pacman",
    "cmds_check_install": [
      "cat /etc/pacman.conf | grep -x ILoveCandy",
      "cat /etc/pacman.conf | grep -x Color",
      "grep -F '[multilib]' /etc/pacman.conf"
    ],
    "cmds_installation": [
      "sudo sed -i 's/#Color/Color/g' /etc/pacman.conf",
      "sudo sed -i 's/#ParallelDownloads = 5/ILoveCandy\nParallelDownloads = 10/g' /etc/pacman.conf",
      "sudo sed -i '/[multilib]/,/Include/''s/^#//' /etc/pacman.conf"
    ]
  },
  {
    "name": "bash",
    "cmds_check_install": [
      "yay -Qa | grep 'cmatrix-git '",
      "yay -Qa | grep 'tty-clock '",
      "[ -L ~/.bashrc ] && true || false"
    ],
    "cmds_installation": [
      "yay -S cmatrix-git tty-clock",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME bash"
    ]
  },
  {
    "name": "user-dirs",
    "cmds_check_install": ["[ -d ~/Pictures ] && true || false"],
    "cmds_installation": ["yay -S xdg-user-dirs", "xdg-user-dirs-update"]
  },
  {
    "name": "vim",
    "cmds_check_install": ["[ -L ~/.vimrc ] && true || false"],
    "cmds_installation": ["cd ~/Dotfiles", "stow -v -R -t $HOME vim"]
  },
  {
    "name": "zsh",
    "cmds_check_install": [
      "yay -Qa | grep 'zsh '",
      "[ -L ~/.zshrc ] && true || false"
    ],
    "cmds_installation": [
      "yay -S zsh",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME zsh"
    ]
  },
  {
    "name": "Hyprland",
    "cmds_check_install": [
      "yay -Qa | grep 'hyprland '",
      "yay -Qa | grep 'polkit-gnome '",
      "yay -Qa | grep 'swaync '",
      "[ -L ~/.config/hypr ] && true || false"
    ],
    "cmds_installation": [
      "yay -S hyprland polkit-gnome swaync jq brightnessctl",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME hyprland"
    ]
  },
  {
    "name": "Nvidia fix",
    "cmds_check_install": [
      "yay -Qa | grep nvidia",
      "yay -Qa | grep nvidia-utils",
      "yay -Qa | grep lib32-nvidia-utils",
      "grep -F 'options nvidia_drm modeset=1 fbdev=1' /etc/modprobe.d/nvidia.conf",
      "grep -F 'nvidia nvidia_modeset nvidia_uvm nvidia_drm' /etc/mkinitcpio.conf"
    ],
    "cmds_installation": [
      "sudo pacman -S nvidia nvidia-utils lib32-nvidia-utils egl-wayland",
      "echo 'options nvidia_drm modeset=1 fbdev=1' > /etc/modprobe.d/nvidia.conf",
      "sudo sed -i '/MODULES=(/MODULES=(nvidia nvidia_modeset nvidia_uvm nvidia_drm/' /etc/mkinitcpio.conf",
      "sudo mkinitcpio -P"
    ]
  },
  {
    "name": "Hyprpaper",
    "cmds_check_install": ["yay -Qa | grep 'hyprpaper '"],
    "cmds_installation": ["yay -S hyprpaper"]
  },
  {
    "name": "Hypr ECO-Sys",
    "cmds_check_install": [
      "yay -Qa | grep 'hypridle '",
      "yay -Qa | grep 'hyprlock '"
    ],
    "cmds_installation": ["yay -S hypridle hyprlock"]
  },
  {
    "name": "Full theme",
    "cmds_check_install": [
      "yay -Qa | grep 'rose-pine-cursor '",
      "yay -Qa | grep 'rose-pine-hyprcursor '"
    ],
    "cmds_installation": [
      "yay -S gnome-shell",
      "yay -S hyprcursor rose-pine-cursor rose-pine-hyprcursor",
      "yay -S candy-icons tokyonight-gtk-theme-git",
      "$HOME/.config/hypr/theme.sh Tokyonight-Dark candy-icons BreezeX-RosePine-Linux 32 'CaskaydiaCove Nerd Font 10'"
    ]
  },
  {
    "name": "Kitty",
    "cmds_check_install": [
      "yay -Qa | grep 'kitty '",
      "[ -L ~/.config/kitty/kitty.conf ] && true || false"
    ],
    "cmds_installation": [
      "yay -S kitty",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME kitty"
    ]
  },
  {
    "name": "Neovim",
    "cmds_check_install": [
      "yay -Qa | grep 'neovim '",
      "[ -L ~/.config/nvim ] && true || false"
    ],
    "cmds_installation": [
      "yay -S neovim npm wl-clipboard luarocks lua51 python-pip python-pynvim ripgrep fd",
      "scd $HOME/Dotfiles && stow -v -R -t $HOME nvim"
    ]
  },
  {
    "name": "Librewolf",
    "cmds_check_install": ["yay -Qa | grep 'librewolf-bin '"],
    "cmds_installation": ["yay -S librewolf-bin"]
  },
  {
    "name": "Audio+BT",
    "cmds_check_install": [
      "yay -Qa | grep 'bluez '",
      "yay -Qa | grep 'pipewire '",
      "systemctl status bluetooth.service | grep Running"
    ],
    "cmds_installation": [
      "yay -S bluez bluez-utils",
      "sudo systemctl enable bluetooth.service",
      "sudo systemctl start bluetooth.service",
      "yay -S pipewire wireplumber pipewire-audio pipewire-alsa pipewire-pulse pipewire-jack pipewire-audio pavucontrol playerctl"
    ]
  },

  {
    "name": "btop",
    "cmds_check_install": [
      "yay -Qa | grep 'btop '",
      "[ -L ~/.config/btop ] && true || false"
    ],
    "cmds_installation": [
      "yay -S btop",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME btop"
    ]
  },
  {
    "name": "cava",
    "cmds_check_install": [
      "yay -Qa | grep 'cava '",
      "[ -L ~/.config/cava ] && true || false"
    ],
    "cmds_installation": [
      "yay -S cava",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME cava"
    ]
  },
  {
    "name": "fastfetch",
    "cmds_check_install": [
      "yay -Qa | grep 'fastfetch '",
      "[ -L ~/.config/fastfetch ] && true || false"
    ],
    "cmds_installation": [
      "yay -S fastfetch",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME fastfetch"
    ]
  },
  {
    "name": "mpv",
    "cmds_check_install": [
      "yay -Qa | grep 'mpv '",
      "[ -L ~/.config/mpv ] && true || false"
    ],
    "cmds_installation": [
      "yay -S mpv",
      "cd $HOME/Dotfiles && stow -v -R -t $HOME mpv"
    ]
  },
  {
    "name": "Steam",
    "cmds_check_install": ["yay -Qa | grep 'steam '"],
    "cmds_installation": ["yay -S steam"]
  },
  {
    "name": "Capturing",
    "cmds_check_install": ["yay -Qa | grep 'hyprshot '"],
    "cmds_installation": [
      "yay -S hyprshot grim slurp wf-recorder swappy wl-clipboard imagemagick"
    ]
  },
  {
    "name": "AGS",
    "cmds_check_install": ["yay -Qa | grep 'aylurs-gtk-shell '"],
    "cmds_installation": ["yay -S aylurs-gtk-shell", "ags init --gtk 4"]
  }
]
